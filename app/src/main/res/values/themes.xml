<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NASAApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:statusBarColor">?superColor1_700</item>
        <item name="android:navigationBarColor">?superColor1_700</item>
        <item name="colorPrimary">?superColor1_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">?superColor1_100</item>
        <item name="colorOnPrimaryContainer">?superColor1_900</item>
        <item name="colorPrimaryInverse">?superColor1_200</item>
        <item name="colorSecondary">?superColor2_600</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">?superColor2_100</item>
        <item name="colorOnSecondaryContainer">?superColor2_900</item>
        <item name="colorTertiary">?superColor3_600</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">?superColor3_100</item>
        <item name="colorOnTertiaryContainer">?superColor3_900</item>
        <item name="colorOnSurface">?superColor3_800</item>

        <item name="floatingActionButtonStyle">@style/myFloatingActionButtonStyle</item>
        <item name="bottomAppBarStyle">@style/myBottomAppBarStyle</item>
        <item name="materialButtonStyle">@style/myButtonStyle</item>
        <item name="switchStyle">@style/mySwitchStyle</item>
    </style>

    <style name="MySplashScreenTheme" parent="Theme.NASAApp">
        <item name="superColor1_600">@color/teal_600</item>
        <item name="superColor1_700">@color/orange_700</item>
        <item name="superColor1_100">@color/teal_100</item>
        <item name="superColor1_900">@color/teal_900</item>
        <item name="superColor1_200">@color/teal_200</item>
        <item name="superColor2_600">@color/cyan_600</item>
        <item name="superColor2_100">@color/cyan_100</item>
        <item name="superColor2_900">@color/cyan_900</item>
        <item name="superColor3_600">@color/orange_600</item>
        <item name="superColor3_100">@color/orange_100</item>
        <item name="superColor3_900">@color/orange_900</item>
        <item name="superColor3_800">@color/orange_800</item>
        <item name="fontFamily">@font/montserrat_light</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

